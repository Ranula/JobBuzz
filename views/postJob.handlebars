            <div class="alert alert-danger">{{message}}</div>
        {{/if}}

        <!-- Job posting FORM -->

        <form action="/signup" method="post">

            <div class="input-field col s12">
                <label for="timepicker">Start Time</label>
                <input id="timepicker" class="timepicker" type="time">

            </div>





        </form>

